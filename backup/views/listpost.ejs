<!DOCTYPE HTML>
<html>
<head>
<title>Post</title>
<!-- Bootstrap -->
<link href="css/bootstrap.min.css" rel='stylesheet' type='text/css' />
<link href="css/bootstrap.css" rel='stylesheet' type='text/css' />
<meta name="viewport" content="width=device-width, initial-scale=1">
<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
<link href="css/green.css" rel="stylesheet" type="text/css" media="all" />
<!----font-Awesome----->
   	<link rel="stylesheet" href="fonts/css/font-awesome.min.css">
<!----font-Awesome----->
<!-- start plugins -->
<script type="text/javascript" src="js/jquery.min.js"></script>
<script src="js/menu.js" type="text/javascript"></script>
</head>
<body>

	 <% include layout/header %>

	<div class="main_bg"><!-- start main -->
	<div class="container">
		<div class="main_grid1">
			<h3 class="style pull-left">Post</h3>
			<ol class="breadcrumb pull-right">
			  <li><a href="/">Home</a></li>
			  <li class="active">Post</li>
			</ol>
			<div class="clearfix"></div>
		</div>
	</div>
	</div>
	
	<div class="main_btm1"><!-- start main_btm -->
	<div class="container">
		<div class="blog"><!-- start blog -->
				<div class="blog_main col-md-9">
					<% for(var i=0; i<posts.length; i++) {%>
						<% var date = new Date(posts[i].date); 
							var month = new Array();
							month[0] = "January";
							month[1] = "February";
							month[2] = "March";
							month[3] = "April";
							month[4] = "May";
							month[5] = "June";
							month[6] = "July";
							month[7] = "August";
							month[8] = "September";
							month[9] = "October";
							month[10] = "November";
							month[11] = "December";
							var y = date.getFullYear();
							var m = month[date.getMonth()]; 
							var d = date.getDay();%>
						
						<% if(posts[i].type == 1){ %>
							<div class="blog_list">
								<div class="col-md-2 blog_date">
									<span class="date"><%= m %> <p><%= d %><p></p></span>
									<span class="icon_date"><i class="fa"><span class="glyphicon glyphicon-align-left"></span></i></span>
								</div>
								<div class="col-md-10 blog_left">
									<p class="para"><%= posts[i].details %> </p>
									<span>posted by <a href="#"><%= posts[i].madeby.details.name.first + " " + posts[i].madeby.details.name.last %></a> <a class="left" href="#"><i class="fa fa-comment"></i><%= posts[i].comments.length %> Comments</a> <a class="left" href="#"><i class="fa fa-eye"></i>0 views</a> <a class="left" href="#"><i class="fa"><span class="glyphicon glyphicon-heart"></span></i><%= posts[i].likes.length %> like</a></span>
									
									<div class="read_btn">
										<a href="#"><button class="btn">view more</button></a>
									</div>
								</div>
								<div class="clearfix"></div>
							</div>
						<% }else if(posts[i].type == 2){ %>
							<div class="blog_list">
								<div class="col-md-2 blog_date">
									<span class="date"><%= m %> <p><%= d %><p></p></span>
									<span class="icon_date"><i class="fa"><span class="glyphicon glyphicon-camera"></span></i></span>
								</div>
								<div class="col-md-10 blog_left">
									<a href="#"><img src="<%= posts[i].details.url %>" alt="" class="img-responsive"/></a>
									<span>posted by <a href="#"><%= posts[i].madeby.details.name.first + " " + posts[i].madeby.details.name.last %></a> <a class="left" href="#"><i class="fa fa-comment"></i><%= posts[i].comments.length %> Comments</a> <a class="left" href="#"><i class="fa fa-eye"></i>0 views</a> <a class="left" href="#"><i class="fa"><span class="glyphicon glyphicon-heart"></span></i><%= posts[i].likes.length %> like</a></span>
									<p class="para"><%= posts[i].details.text %> </p>
									<div class="read_btn">
										<a href="#"><button class="btn">view more</button></a>
									</div>
								</div>
								<div class="clearfix"></div>
							</div>
						<% }else if(posts[i].type == 3){ %>
							<div class="blog_list">
								<div class="col-md-2 blog_date">
									<span class="date"><%= m %> <p><%= d %><p></p></span>
									<span class="icon_date"><i class="fa"><span class="glyphicon glyphicon-film"></span></i></span>
								</div>
								<div class="col-md-10 blog_left">
									<video width="100%" controls>
									  <source src="<%= posts[i].details.url %>" type="video/mp4">
									</video>
									<span>posted by <a href="#"><%= posts[i].madeby.details.name.first + " " + posts[i].madeby.details.name.last %></a> <a class="left" href="#"><i class="fa fa-comment"></i><%= posts[i].comments.length %> Comments</a> <a class="left" href="#"><i class="fa fa-eye"></i>0 views</a> <a class="left" href="#"><i class="fa"><span class="glyphicon glyphicon-heart"></span></i><%= posts[i].likes.length %> like</a></span>
									<p class="para"><%= posts[i].details.text %> </p>
									<div class="read_btn">
										<a href="#"><button class="btn">view more</button></a>
									</div>
								</div>
								<div class="clearfix"></div>
							</div>
						<% }else if(posts[i].type == 4){ %>
							<div class="blog_list">
								<div class="col-md-2 blog_date">
									<span class="date"><%= m %> <p><%= d %><p></p></span>
									<span class="icon_date"><i class="fa">Event</i></span>
								</div>
								<div class="col-md-10 blog_left">
									<h4><a href="single-page.html"><%= posts[i].details.name %> - <%= posts[i].details.schedule %></a></h4>
									<span>posted by <a href="#"><%= posts[i].madeby.details.name.first + " " + posts[i].madeby.details.name.last %></a> 
									<a class="left" href="#"><i class="fa fa-comment"></i><%= posts[i].comments.length %> Comments</a> 
									<a class="left" href="#"><i class="fa fa-eye"></i>0 views</a> 
									<a class="left" href="#"><i class="fa"><span class="glyphicon glyphicon-heart"></span></i><%= posts[i].likes.length %> like</a>
									<a class="left" href="#"><i class="fa"><span class="glyphicon glyphicon-heart"></span></i><%= posts[i].details.participator.length %> Join</a>
									</span>
									<p class="para"><%= posts[i].details.details %> </p>
									<div class="read_btn">
										<a href="#"><button class="btn">view more</button></a>
									</div>
								</div>
								<div class="clearfix"></div>
							</div>
						<% } %>
					<% } %>
					

					
					<div class="clearfix"></div>
				</div>
				<div class="col-md-3 blog_right">
					<h4>Ads</h4>
					<ul class="ads_nav list-unstyled">
						<li><a href="#"><img src="images/ads_pic.jpg" alt=""> </a></li>
						<li><a href="#"><img src="images/ads_pic.jpg" alt=""> </a></li>
						<li><a href="#"><img src="images/ads_pic.jpg" alt=""> </a></li>
						<li><a href="#"><img src="images/ads_pic.jpg" alt=""> </a></li>
						<div class="clearfix"></div>
					</ul>
					<ul class="tag_nav list-unstyled">
						<h4>tags</h4>
							<li class="active"><a href="#">All</a></li>
							<li><a href="#">text</a></li>
							<li><a href="#">picture</a></li>
							<li><a href="#">photo</a></li>
							<li><a href="#">video</a></li>
							<div class="clearfix"></div>
					</ul>
				</div>
				<div class="clearfix"></div>
		</div><!-- end blog -->
	</div>
	</div>

	<% include layout/footer %>

</body>
</html>